<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title><%= @title %></title>
    <%= Libs.css :jaci, :fontawesome %>
    <%= Libs.js :react, :management %>
    <% unless @css.nil? %>
        <%= @css.map { |x| Libs.css x }.join("\n") %>
    <% end %>

    <% unless @js.nil? %>
        <%= @js.map { |x| Libs.js x }.join("\n") %>
    <% end %>
</head>
<body>
    <main class="wrapper">
        <nav class="navigation" id="navigation">
            <section class="container">
                <a class="button button-clear"> Management </a>
                <div style="float: right;">
                    <a href="/" class="button button-clear"> Home </a>
                    <% if auth? %>
                        <a class="button button-clear"> <%= @user.username %> </a>
                        <a href="/logout" class="button button-clear"> Logout </a>
                    <% end %>
                </div>
            </section>
        </nav>


        <section class="container body">
            <%= yield %>
        </section>
    </main>
</body>